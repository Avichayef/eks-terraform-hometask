# AWS Configuration
AWS_REGION=us-east-2
ECR_REPO_NAME=flask-k8s-demo

# Application Configuration
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# Kubernetes Configuration
K8S_CLUSTER_NAME=my-eks
K8S_APP_NAME=flask-app
K8S_REPLICAS=2
K8S_SERVICE_PORT=80

# Resource Limits
K8S_CPU_REQUEST=100m
K8S_CPU_LIMIT=200m
K8S_MEMORY_REQUEST=128Mi
K8S_MEMORY_LIMIT=256Mi

# Health Probe Configuration
K8S_PROBE_INITIAL_DELAY=5
K8S_PROBE_PERIOD=10
